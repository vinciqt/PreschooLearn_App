<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".scorequiz">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="#00FFFFFF"
        android:backgroundTintMode="screen"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/congratulations"
        app:layout_constraintBottom_toTopOf="@+id/scoreViewer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326" />

    <TextView
        android:text="7/7"
        android:id="@+id/scoreViewer"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textSize="90dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAfterQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAfterQuiz"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#244E0E"
        android:fontFamily="@font/aksi_font"
        android:text="GO TO QUIZ"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAfterHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#633818"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btnAfterHistory"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#244E0E"
        android:fontFamily="@font/aksi_font"
        android:text="VIEW HISTORY"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#633818"
        app:strokeWidth="2dp" />/>

</androidx.constraintlayout.widget.ConstraintLayout>